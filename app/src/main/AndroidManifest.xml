<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <!-- 저장 파일에 접근하기 위한 퍼미션 설정 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.DanGam"
            tools:targetApi="31">
        <activity
                android:name=".PostDialog"
                android:exported="false" />
        <activity
                android:name=".PostActivity"
                android:exported="false" />
        <activity
                android:name=".PostModifyActivity"
                android:exported="false" />
        <activity
                android:name=".PostWriteActivity"
                android:exported="true" />
        <activity
                android:name=".AdvertisingModifyToastActivity"
                android:exported="false" />
        <activity
                android:name=".PostGpsActivity"
                android:exported="false" />
        <activity
                android:name=".AdvertisingDeleteToastActivity"
                android:exported="false" />
        <activity
                android:name=".AdvertisingDeleteActivity"
                android:exported="false" />
        <activity
                android:name=".MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>