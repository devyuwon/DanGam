<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".advertising_gps"
        android:orientation="vertical"
        android:background="#DBDBDB">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/half_round_btn"
            android:layout_marginTop="30dp">

        <ImageView

                android:layout_width="350dp"
                android:layout_height="350dp"
                android:id="@+id/imageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/fubao"
                android:scaleType="fitXY" />

        <ImageButton
                android:src="@drawable/frame"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageButton"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="35dp"
                android:layout_marginStart="15dp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/white"
                android:background="#ffffff" />

        <ImageView
                android:src="@drawable/rectangle"
                android:layout_width="60dp"
                android:layout_height="4dp"
                android:id="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:text="위치"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView11" />

        <View
                android:layout_width="360dp"
                android:layout_height="2dp"
                android:id="@+id/view2"
                android:paddingRight="10dp"
                android:background="#DBDBDB"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="65dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#ffffff"
                android:id="@+id/constraintLayout"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                    android:text="덕진구 아하마을"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textColor="#313134"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp" />

            <Button
                    android:text="도로명"
                    android:layout_width="57dp"
                    android:layout_height="21dp"
                    android:id="@+id/button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:circularflow_radiusInDP="0dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/round_100dp_btn"
                    android:backgroundTint="#DBDBDB"
                    android:textSize="10sp"
                    android:layout_marginTop="32dp" />

            <TextView
                    android:text="전주 덕진구 아하마을"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:textColor="#747878"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/button"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
                android:text="확인"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:id="@+id/button4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_nocolor_btn"
                android:backgroundTint="#FF8000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#ffffff" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>