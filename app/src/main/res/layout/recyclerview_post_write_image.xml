<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_margin="10dp"
            android:padding="2dp"
            android:scaleType="fitXY"

            android:id="@+id/ivRecyclerviewImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/round_nocolor_btn">

    </ImageView>

    <ImageView

            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/ivRecyclerviewImageDelete"
            app:srcCompat="@drawable/imagedelete"
            app:layout_constraintEnd_toEndOf="@+id/ivRecyclerviewImage"
            app:layout_constraintTop_toTopOf="@+id/ivRecyclerviewImage"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>