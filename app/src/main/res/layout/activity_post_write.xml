<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PostWriteActivity"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="67dp">

        <Button
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:id="@+id/btn_post_back"
                android:background="@drawable/vector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:contentDescription="해당 view에 대한 설명"
                android:layout_marginTop="17dp" />

        <TextView
                android:text="글 작성하기"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="140dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="690dp">

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:visibility="visible">

                <Button
                        android:text="일감"
                        android:layout_width="104dp"
                        android:layout_height="58dp"
                        android:id="@+id/btn_ilgam"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="#EBEBEB"
                        android:textSize="20sp"
                        android:textColor="#191C1D"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        android:background="@drawable/round_100dp_btn" />

                <Button
                        android:text="일꾼"
                        android:layout_width="104dp"
                        android:layout_height="58dp"
                        android:id="@+id/btn_ilgun"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_ilgam"
                        app:layout_constraintVertical_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/btn_ilgam"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="#EBEBEB"
                        android:textColor="#191C1D"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        app:layout_constraintTop_toTopOf="@+id/btn_ilgam"
                        android:background="@drawable/round_100dp_btn" />

                <TextView
                        android:text="유형"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="19dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:textColor="#404040"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                <TextView
                        android:text="사진"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        app:layout_constraintTop_toBottomOf="@+id/btn_ilgam"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginTop="5dp" />

                <TextView
                        android:text="내용"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        app:layout_constraintTop_toBottomOf="@+id/editTextText"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp" />

                <TextView
                        android:text="모집 희망 장소"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="100dp"
                        app:layout_constraintTop_toBottomOf="@+id/editTextText3"
                        android:layout_marginTop="15dp" />

                <TextView
                        android:text="제목"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#404040"
                        app:layout_constraintTop_toBottomOf="@+id/scrollView4"
                        android:layout_marginTop="10dp" />

                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/textView7"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/scrollView4">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="SpeakableTextPresentCheck">

                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/btn_post_picture"
                                android:background="@drawable/picture"
                                android:layout_marginLeft="10dp" />

                        <ImageView
                                android:contentDescription="하고 싶은 설명"
                                android:layout_height="98dp"
                                android:id="@+id/iv_post_picture"
                                android:layout_width="98dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/round_btn"
                                app:srcCompat="@drawable/round_btn" />

                        <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:id="@+id/rv_post_image" />

                    </LinearLayout>
                </ScrollView>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/editTextText"
                        app:layout_constraintTop_toBottomOf="@+id/textView9"
                        android:layout_marginTop="10dp"
                        android:hint="ex. 매장 청소 도와주실 분 구합니다."
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/round_btn"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp" />

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:ems="10"
                        android:id="@+id/editTextText3"
                        android:hint="\n ex.  \n -업무 내용 : \n -경력 여부 : \n -나이제한 : \n -자격요건 : \n -모집인원 :\n\n"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/round_btn"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView10"
                        android:gravity="start"
                        android:paddingTop="10dp" />

                <Button
                        android:text="위치 추가"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_plus_gps"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        app:cornerRadius="10dp"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:textAlignment="center"
                        android:backgroundTint="#FFAC61"
                        android:background="@drawable/round_100dp_btn" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

        <Button
                android:text="작성완료"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn_post_complete"
                app:cornerRadius="8dp"
                android:backgroundTint="#FF8000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="bottom|center"
                android:background="@drawable/round_nocolor_btn" />
    </LinearLayout>

</LinearLayout>